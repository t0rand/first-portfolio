  <% product.post_comments.each do |post_comment| %>
    <div>
      <%= attachment_image_tag(post_comment.user, :avatar, size: '50x50', fallback: "no_image.png") %>
      <%= post_comment.comment %>

      <% if post_comment.can_destroy?(current_user) %>
        <%= link_to "destroy", product_post_comment_path(product, post_comment), method: :delete, class: "btn-sm btn-danger", remote: true %>
      <% end %>
    </div>

    <div>
      <%= post_comment.user.name %>
    </div>
  <% end %>