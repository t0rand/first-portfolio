<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<h2>ユーザー一覧</h2>
				<!--users一覧 -->
				<table class="table">
					<thead>
						<tr>
							<th>アバター</th>
							<th>名前</th>
							<th colspan="3"></th>
							<th colspan="4"></th>
							<th colspan="5"></th>
							<th colspan="6"></th>
						</tr>
					</thead>

					<tbody>
						<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag(user, :avatar, size: '50x50', fallback: "no_image.png") %></td>
							<td><%= user.name %></td>
							<td><%#= "フォロー数: #{user.follower.count}" %></td>
							<td><%#= "フォロワー数: #{user.followed.count}" %></td>
							<td>
				    	<%# unless user == current_user %>
				      <%# if current_user.following?(user) %>
				        <%#= link_to 'リムーブ', unfollow_path(user.id), method: :POST %>
				      <%# else %>
				        <%#= link_to 'フォロー', follow_path(user.id), method: :POST %>
				  		<%# end %>
				  		<%# end %>
							</td>
							<td><%= link_to "ユーザー詳細", user_path(user), class: "user_#{user.id}" %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
				<!--users一覧 -->
		</div>
	</div>
</div>