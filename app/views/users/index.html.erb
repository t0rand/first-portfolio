<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<h3>ユーザー一覧</h3>
			<!--ransackここから-->
			<%= search_form_for @q do |f| %>
	  		<%= f.label :name, "検索ワード" %>
	  		<%= f.search_field :name_cont %>
			  <%= f.submit "検索" %>
			<% end %>
			<!--ransackここまで-->
			<!--users一覧 -->
			<table class="table">
				<thead>
					<tr>
						<th><%= sort_link(@q, :avatar, "アバター") %></th>
						<th><%= sort_link(@q, :name, "名前") %></th>
						<!--<th colspan="3"></th>-->
						<!--<th colspan="4"></th>-->
						<th><%= sort_link(@q, :is_admin, "管理者フラグ") %></th>
						<th><%= sort_link(@q, :deleted_at, "ステータス") %></th>
						<th colspan="6"></th>
					</tr>
				</thead>

				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag(user, :avatar, size: '50x50', fallback: "no_image.png") %></td>
						<td><%= user.name %></td>
						<!--<td><%#= "フォロー数: #{user.follower.count}" %></td>-->
						<!--<td><%#= "フォロワー数: #{user.followed.count}" %></td>-->
						<!--<td>-->
					 <!--   	<%# unless user == current_user %>-->
					 <!--     		<%# if current_user.following?(user) %>-->
					 <!--       	<%#= link_to 'リムーブ', unfollow_path(user.id), method: :POST %>-->
					 <!--     	<%# else %>-->
					 <!--       	<%#= link_to 'フォロー', follow_path(user.id), method: :POST %>-->
					 <!-- 		<%# end %>-->
						<!--</td>-->
						<td>
							<% if user.is_admin? %>
								<%= "管理者" %>
							<% else %>
								<%= "一般" %>
							<% end %>
						</td>
						<td>
							<% if user.deleted_at? %>
								<%= "退会済" %>
							<% else %>
								<%= "" %>
							<% end %>
						</td>

						<td><%= link_to "ユーザー詳細", user_path(user), class: "user_#{user.id}" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<!--users一覧 -->
		</div>
	</div>
</div>